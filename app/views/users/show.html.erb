<div class="container d-flex bd-highlight">

  <div class="bd-highlight">
    <h1><%=@user.name%></h1>
        <hr>
      <% if current_user?(@user)%>
        <div class="my-3">
            <%=link_to 'Update Account', edit_user_path(@user), class:"btn btn-outline-secondary"%>
            <%=link_to 'Delete profile', user_path(@user), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
        </div>
      <%end%>
      
      <%if @registrations.present?%>
        <h3>My Registared Events</h3>
        <ol class="list-group  my-3">
          <%@registrations.each do |reg|%>
              <li class="list-group-item d-flex justify-content-between align-items-start my-1">
                <div class="ms-2 me-auto">
                  <div class="fw-bold fs-5"> Event Name: <%=link_to reg.event.name ,reg.event%></div>
                  Location: <%=reg.event.location%>
                </div>
                <span class=""><%=time_ago_in_words(reg.event.created_at)%></span>
              </li>
          <%end%>
        </ol>
        <%end%>


  </div>

  <div class="bd-highlight ms-5">
    <h4>Liked Events</h4>
    <ul class="list-group">
      <%@liked_events.each do |event|%> 
        <li class="list-group-item"><%=link_to event.name ,event%></li>
      <%end%>
    </ul>

  </div>

</div>  
  
     
